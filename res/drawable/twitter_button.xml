<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
           
            <gradient android:angle="270" android:endColor="@color/common_signin_btn_text_dark" android:startColor="@color/common_signin_btn_text_light" />

            <stroke android:width="1dp" android:color="#ffffff" />

            <corners android:radius="4dp" />
